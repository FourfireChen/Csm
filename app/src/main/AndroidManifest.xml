<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chuansongmen">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".login.VerifyActivity" />
        <activity android:name=".TestActivity" />
        <activity android:name=".rider.scan.ScanActivity" />
        <activity android:name=".rider.sendget.SendGetActivity" />
        <activity android:name=".rider.receipt.ReceiptActivity" />
        <activity android:name=".rider.career_info.CareerInfoActivity" />
        <activity android:name=".driver.RouteActivity" />
    </application>
</manifest>
