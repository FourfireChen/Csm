<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:background="@color/colorAccent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/verify_title"
        android:text="已发送验证码"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/verify_phonenumber"
        android:hint="手机号码"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_below="@id/verify_title"
        android:background="@drawable/edittext_background"
        android:layout_width="250dp"
        android:layout_height="50dp" />
    <EditText
        android:id="@+id/verify_code"
        android:hint="请输入短信验证码"
        android:gravity="center"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:layout_alignStart="@id/verify_phonenumber"
        android:layout_below="@id/verify_phonenumber"
        android:background="@drawable/edittext_background"
        android:layout_width="170dp"
        android:layout_height="50dp" />
    <Button
        android:id="@+id/verify_send"
        android:text="发送验证码"
        android:textSize="11dp"
        android:layout_marginBottom="-5dp"
        android:layout_marginStart="5dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_toEndOf="@id/verify_code"
        android:layout_alignBottom="@id/verify_code"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_width="80dp"
        android:layout_height="60dp" />

    <Button
        android:id="@+id/verify_confirm"
        android:text="确认登录"
        android:layout_marginTop="30dp"
        android:textSize="15dp"
        android:background="@drawable/edittext_background"
        android:layout_below="@id/verify_send"
        android:layout_centerHorizontal="true"
        android:layout_width="100dp"
        android:layout_height="40dp" />


    <include
        android:id="@+id/verify_verifying"
        layout="@layout/verifying"
        android:visibility="invisible"/>
</RelativeLayout>